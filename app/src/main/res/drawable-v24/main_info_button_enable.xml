<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="fill">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:gravity="left|center_vertical"
        android:left="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <size
                android:width="@dimen/mainButtonSize"
                android:height="@dimen/mainButtonSize" />
        </shape>
    </item>

    <item
        android:width="@dimen/mainButtonImageSize"
        android:height="@dimen/mainButtonImageSize"
        android:drawable="@drawable/info_icon"
        android:gravity="left|center_vertical"
        android:left="25dp"></item>

    <item
        android:gravity="left|bottom"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <size android:height="4dp" />
            <solid android:color="#000000" />
            <gradient
                android:angle="90"
                android:endColor="#00ffffff"
                android:startColor="#C3C0C0C0" />
        </shape>
    </item>

</layer-list>